---
import "../styles/global.css";
---

<div class="bg-black text-white">
    <div class="max-w-6xl mx-auto px-6 py-12">
        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left"
        >
            <div class="flex flex-col items-center md:items-start gap-4">
                <img
                    src="https://www.puntaarenas.cl/img/Logo.640046c2.png"
                    alt="Logo Municipalidad de Punta Arenas"
                    class="h-16 w-auto"
                />
                <div>
                    <h4 class="text-xl font-bold">
                        Municipalidad de Punta Arenas
                    </h4>
                    <p class="text-sm text-gray-400">
                        Comprometidos con nuestra comunidad
                    </p>
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <h5
                        class="font-semibold text-white uppercase tracking-wide"
                    >
                        Dirección
                    </h5>
                    <p class="text-sm text-gray-400">
                        Plaza Muñoz Gamero 745, Punta Arenas, Chile
                    </p>
                </div>
                <div>
                    <h5
                        class="font-semibold text-white uppercase tracking-wide"
                    >
                        Mesa Central
                    </h5>
                    <p class="text-sm text-gray-400">(61) 2 200500</p>
                </div>
            </div>

            <div class="space-y-2 text-sm">
                <h5 class="font-semibold text-white uppercase tracking-wide">
                    Créditos
                </h5>
                <p class="text-gray-400">
                    Desarrollado y diseñado por Diego Sanhueza
                </p>
                <a
                    href="mailto:diegosanhuezaaguilar@gmail.com"
                    class="text-indigo-400 hover:underline"
                >
                    diegosanhuezaaguilar@gmail.com
                </a>
            </div>
        </div>

        <div
            class="mt-10 border-t border-gray-700 pt-6 text-center text-sm text-gray-500"
        >
            &copy; 2025 Municipalidad de Punta Arenas. Todos los derechos
            reservados.
        </div>
    </div>
</div>
