---
import "../styles/global.css";
import heroImage from "../assets/puq.jpeg";
---

<nav
    id="nav"
    class="fixed inset-x-0 top-0 flex items-center justify-between px-6 py-4 z-20 text-white bg-black bg-opacity-80 backdrop-blur-lg shadow-md transition-all duration-300"
>
    <div class="text-xl font-extrabold tracking-widest">
        <a href="#" class="hover:text-indigo-400 transition duration-300">
            Carnaval de Invierno 2025
        </a>
    </div>

    <div class="hidden md:flex space-x-6 font-semibold">
        <a
            href="https://www.puntaarenas.cl"
            target="_blank"
            class="hover:text-indigo-300 transition duration-300"
            >Municipalidad</a
        >
        <a
            href="https://www.puntaarenas.cl"
            target="_blank"
            class="hover:text-indigo-300 transition duration-300">Contacto</a
        >
    </div>

    <div id="nav-open" class="md:hidden cursor-pointer">
        <div class="w-6 h-1 bg-white mb-1"></div>
        <div class="w-6 h-1 bg-white mb-1"></div>
        <div class="w-6 h-1 bg-white"></div>
    </div>
</nav>

<div
    id="nav-opened"
    class="fixed left-0 right-0 hidden bg-white shadow-lg rounded-md mx-4 mt-16 p-4 z-20"
>
    <div class="space-y-4 text-center text-lg font-semibold">
        <a
            href="https://www.puntaarenas.cl"
            target="_blank"
            class="block text-gray-800 hover:text-indigo-700">Municipalidad</a
        >
        <a
            href="https://www.puntaarenas.cl"
            target="_blank"
            class="block text-gray-800 hover:text-indigo-700">Contacto</a
        >
    </div>
</div>

<header
    id="up"
    class="relative h-[85vh] bg-cover bg-center bg-fixed before:absolute before:inset-0 before:bg-black/50 flex items-center justify-center text-center"
    style={`background-image: url(${heroImage.src});`}
>
    <div class="relative z-10">
        <h1 class="text-white font-extrabold text-4xl md:text-6xl">
            Carnaval de Invierno <span class="text-indigo-400">2025</span>
        </h1>

        <div class="mt-6 flex flex-col space-y-2 sm:flex-row sm:space-x-4">
            <a href="#vote">
                <button
                    class="px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-lg shadow-md transition duration-300"
                >
                    Conoce los carros
                </button>
            </a>

            <a href="#discount">
                <button
                    class="px-6 py-3 border-2 border-indigo-500 bg-white bg-opacity-20 hover:bg-opacity-100 hover:border-indigo-600 text-indigo-200 hover:text-indigo-800 font-bold rounded-lg shadow-md transition duration-300"
                >
                    Obt√©n descuentos
                </button>
            </a>
        </div>
    </div>
</header>

<script>
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
            e.preventDefault();

            const targetId = this.getAttribute("href").substring(1);
            const targetElement = document.getElementById(targetId);

            if (targetElement) {
                window.scrollTo({
                    top: targetElement.offsetTop - 80,
                    behavior: "smooth",
                });
            }
        });
    });
</script>
